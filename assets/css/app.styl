body
  padding 0px
  margin 0
  font-size fontsize1 
  font-family fontfamily1
  background #fff //#f8f8ff

*
  box-sizing border-box
  
hr
  border 0
  margin 1em 0
  padding 0
  height 1px 
  background #eee
a
  color #4078c0
  text-decoration none
  &:hover
    text-decoration underline

.hidden
  display none

// https://css-tricks.com/snippets/css/a-guide-to-flexbox/
.layout
  max-width 1024px
  margin auto
  // background #fff
  &:after
    content: "."
    display: block
    height: 0
    clear: both
    visibility: hidden

    
  > .siteHeader
    width 100%
    display block
  > .sidebar
    width 300px
    display block
    float right
    vartical-align top
  > .content 
    margin-right 320px
    display block
    padding 0 0px

.layout_auth
  max-width 1024px
  margin auto
  // background #fff
  &:after
    content: "."
    display: block
    height: 0
    clear: both
    visibility: hidden
  > .content 
    margin auto
    max-width 320px
    display block
    padding 0 0px  


footer
  clear: both
  background #eee
  margin 50px 0 0
  padding 20px
  font-size fontsize3
  border-top 1px solid #eee
  color #999
header
  background #4078c0
  padding 0 20px
  margin 0 0 20px
  min-height 40px

  .logo
    float left
    font-size 1.2em
    line-height 40px
    a
      color white
      font-weight bold
  .leftMenu
    float left
  .rightMenu
    float right
  ul
    margin 0
    paddin 0
    list-style none
    li
      margin 0 10px
      paddin 0
      display inline-block
      a.item
        display inline-block
        line-height 40px
        color white
      a.item:first-letter
        text-transform uppercase 
      a.item + a.item
        display inline-block
        margin-left 20px
