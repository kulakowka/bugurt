.dropdown
  position relative
  .handle
    display inline-block
    cursor pointer
  .menu
    display none
    background white
    position absolute
    top -6px
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.2)
    text-align right
    z-index 1
    &.left
      text-align left
      left -20px
    &.right
      text-align right
      right -20px
    a
      display block
      padding 0px 20px
      line-height 32px
      white-space nowrap
      text-decoration none
      color #333
      &:first-letter
        text-transform uppercase
      &:hover
        background blueColor
        color white
        .count 
          color white
      .count
        vertical-align middle
        text-align center
        font-weight bold
        // border-radius 30px
        margin-left 10px
        // background red
        color green
        font-size 10px
        // line-height 16px
        // min-width 12px
        display inline-block
        
