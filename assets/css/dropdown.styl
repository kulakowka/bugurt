.dropdown
  position relative
  .handle
    display inline-block
  .menu
    display none
    background white
    position absolute
    top -8px
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.2)
    text-align right
    z-index 1
    &.left
      text-align left
      left -20px
    &.right
      text-align right
      right -20px
    a
      display block
      padding 10px 20px
      white-space nowrap
      text-decoration none
      color #333
      &:first-letter
        text-transform uppercase
      &:hover
        background #00B7FF
        color white
