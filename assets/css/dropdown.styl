.dropdown
  position relative
  .handle
    display inline-block
  .menu
    display none
    background white
    position absolute
    top -6px
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.2)
    text-align right
    z-index 1
    &.left
      text-align left
      left -20px
    &.right
      text-align right
      right -20px
    a
      display block
      padding 0px 20px
      line-height 30px
      white-space nowrap
      text-decoration none
      color #333
      &:first-letter
        text-transform uppercase
      &:hover
        background #00B7FF
        color white
      .count
        text-align left
        margin-right 10px
        width 20px
        display inline-block
        
