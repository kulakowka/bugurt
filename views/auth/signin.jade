extends ../layout_auth

block head
  title= __('Вход')

block content
  h1= __('Вход')

  form.authForm.js-form-signin
    .field
      label.field-label(for="username-field")= __('Логин:')
      input.field-input(id="username-field" type="text" name="username" placeholder=__("логин") maxLength="20" required)
    .field
      label.field-label(for="password-field")= __('Пароль:')
      input.field-input(id="password-field" type="password" name="password" placeholder=__("пароль") required)
    .field
      button.btn.btn-submit(type="submit")= __('войти')