extends ../layout_auth

block head
  title= __('Регистрация')

block content
  h1= __('Регистрация')

  form.authForm.js-form-signup
    .field
      label.field-label(for="username-field")= __('Логин:')
      input.field-input(id="username-field" type="text" name="username" placeholder=__("логин") autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="email-field")= __('Email:')
      input.field-input(id="email-field" type="text" name="email" placeholder=__("email") autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="password-field")= __('Пароль:')
      input.field-input(id="password-field" type="password" name="password" placeholder=__("пароль") autocomplete="off" required)
    .field
      label.field-label(for="password-confirm-field")= __('Повторите пароль:')
      input.field-input(id="password-confirm-field" type="password" name="passwordConfirm" placeholder=__("повторите пароль") autocomplete="off" required)        
    .field
      button.btn.btn-submit(type="submit")= __('Зарегистрироваться')