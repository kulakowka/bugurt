extends ../layout.jade

block head
  title= __('Sign up')

block content
  h1= __('Sign up')

  form.authForm.js-form-signup
    .field
      label.field-label(for="username-field")= __('Username:')
      input.field-input(id="username-field" type="text" name="username" placeholder=__("username") autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="email-field")= __('Email:')
      input.field-input(id="email-field" type="text" name="email" placeholder=__("email") autocomplete="off" maxLength="20" required)
    .field
      label.field-label(for="password-field")= __('Password:')
      input.field-input(id="password-field" type="password" name="password" placeholder=__("password") autocomplete="off" required)
    .field
      label.field-label(for="password-confirm-field")= __('Confirm password:')
      input.field-input(id="password-confirm-field" type="password" name="passwordConfirm" placeholder=__("Repeat password") autocomplete="off" required)        
    .field
      button.btn.btn-submit(type="submit")= __('Submit')