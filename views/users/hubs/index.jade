extends ../../layout

block head
  title= __('Хабы пользователя ') + user.username
block meta
  meta(name='description' content=__('Хабы пользователя ') + user.username )

block content
  if user.isDeleted
    include ../includes/deleted
  else
    - var showFullContent = true
    include ../includes/user
    .userHubs
      include ../../hubs/includes/list
      +paginate('/users/'+user.username+'/hubs')